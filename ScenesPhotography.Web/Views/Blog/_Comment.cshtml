@model CreateCommentViewModel

@{

}

<!-- Comment form-->
<form method="post" asp-controller="Blog" asp-action="Comment" class="mb-4">
    <input asp-for="PostId" type="hidden">
    <textarea class="form-control" asp-for="Body" rows="3" placeholder="Join the discussion and leave a comment!"></textarea>
    <div class="form-group mb-2 mt-2">
        <input asp-for="Name" class="form-control" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Post Comment</button>
</form>